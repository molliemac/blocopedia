<div class="container">

  <%= link_to "Back to wikis", wikis_path %>


  <% if policy(@wiki).show? %>
    <h1><%= markdown_to_html @wiki.title %></h1>
    <p><%= markdown_to_html @wiki.body %></p>
    <small>
      <i>authored by: <%= @wiki.user.name %></i>
      <p><%= render partial: 'collaborators/collaborators', locals: { wiki: @wiki, user: current_user } %></p>
    </small>
  <% end %>

    <br>

  <% if policy(@wiki).update? %>
    <%= link_to "Edit Wiki", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <%= link_to "Delete Wiki", [@wiki], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?' } %>
  <% end %>
</div>